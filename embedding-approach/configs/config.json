{
    "data": {
        "path": "/data/data/train",
        "split_seed": 123
    },

    "model": {
        "input_width": 300,
        "input_height": 300,
        "embedding_size": 256,
        "model_save_path": "/data/models"
    },

    "train":{
        "batch_size":           64,
        "learning_rate":        1e-5,
        "nb_epochs":            500,
        "sampler": "random_sampler",
        "use_augmentation": false,
        "augment_config": {
            "use_erase": false,
            "use_intensity": false,
            "use_geometric": true
        }
    },

    "predict":{
        "db_path":   "/gorilla-reidentification/embedding-approach/database",
        "model_path": "wandering-eon-36-epoch=396-val_loss=0.01.ckpt",
        "img_folder": "/data/data/eval/",
        "n_neighbors": 10
    },

    "create_db": {
        "image_folder":"/data/data/test",
        "db_path": "/gorilla-reidentification/embedding-approach/database",
        "model_path": "/data/models/wandering-eon-36-epoch=396-val_loss=0.01.ckpt"
    }
}
